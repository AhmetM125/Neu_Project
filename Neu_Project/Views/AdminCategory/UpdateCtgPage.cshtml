@using EntityLayer.Concrete
 @model Category
    @{ ViewBag.Title = "Index"; Layout = "~/Views/Shared/_AdminLayout.cshtml"; } 

<br/>
<div style="display:flex;justify-content:flex-end" class="button">
    <h4 style="margin-right:65%">Category List</h4> <a href="~/AdminCategory/CreateCategory" class="btn btn-outline-primary" style="width:15%">New Category</a>
</div>
<br />
<h1>@ViewBag.data</h1>
    
@using (Html.BeginForm("UpdateCategory", "AdminCategory", FormMethod.Post))
{

    @Html.Label("Category Name")
    @Html.TextBoxFor(x => x.Name, new {@class="form-control"})
    <br />
    @Html.Label("Category Description")
    @Html.TextBoxFor(x=>x.Description, new { @class = "form-control" })
    <hr />
    @Html.HiddenFor(x=>x.CategoryId)

    <div style="text-align:center">

    <button style="width:100%" class="btn btn-outline-info" > Confirm </button>
    </div>

    }