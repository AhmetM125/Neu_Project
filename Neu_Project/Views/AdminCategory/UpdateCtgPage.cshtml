@model EntityLayer.Concrete.Category 
@{
    ViewBag.Title = "UpdateCtgPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Update</h2>
<br />
<div style="display:flex;justify-content:flex-start;margin-left:5%" >

@using(Html.BeginForm("UpdateCategory", "AdminCategory",FormMethod.Post))
{
    <div style="width:300px;margin:0 auto;">
        @Html.Label("Category Id")
        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
        <br />
        @Html.Label("Category Name")
        @Html.TextBoxFor(x => x.Name, new {@class="form-control"})
        <br />
        @Html.Label("Category Description")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br />
        <div style="text-align:center">
        <button  style="width:60%" class="btn btn-primary">Update</button>
            
        </div>
    </div>
            }

</div>

