@using EntityLayer.Concrete
@model List<Sale>


<br />

<table class="table table-bordered ">

    <thead>
        <tr style="text-align:center">
            <th>Transaction No</th>
            <th>Product Name</th>
            <th>Sale Date</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
            @*<th></th>*@
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.TransactionNo</td>
                <td>@item.Product.Name</td>
                <td>@item.SaleDate</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
             @*   <td > <a href="~/Report/SaleEdit/@item.SaleId" class="btn btn-outline-info">Edit</a></td>*@
                <td> <a href="~/Report/SaleRemove/@item.SaleId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </tbody>



</table>